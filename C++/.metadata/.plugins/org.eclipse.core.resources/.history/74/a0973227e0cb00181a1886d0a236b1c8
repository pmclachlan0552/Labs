#include <iostream>
using namespace std;

int main() {
	int n;
	cout << "Input n:";
	cin >> n;
	if(n%2==0){
	cout << "Must be an odd number";
	}
	else


	for(int c;c<=n;c++){
		cout << "+";
	for(int c;c<=3;c++){
	cout << "-";}

	}
	cout << "+";


	return 0;
}
