#include <iostream>
#include <string>
using namespace std;
int main(void) {
	unsigned short int val;
	bool ispalindrome = false;

	cout << "value = ";
	cin >> val;

	ispalindrome(val);

	if(ispalindrome)
		cout << val << " is a bitwise palindrome" << endl;
	else
		cout << val << " is not a bitwise palindrome" << endl;

	return 0;
}
