#include <iostream>
using namespace std;

int main() {
int n;
	cout << "MENU" << endl
			<< "0 - exit" << endl
			<< "1 - addition" << endl
			<< "2 - subtraction" << endl
			<< "3 - multiplication" <<endl;
cin >> n;
switch(n){
case 1: cout << "1"; break;
case 2: cout << "2"; break;
case 3: cout << "3"; break;
case 4: cout << "4"; break;
case 5: cout << "5"; break;
}

	return 0;
}
