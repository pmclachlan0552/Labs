#include <iostream>
using namespace std;

int main() {
	int n;
	cout << "Input an odd #:";
	cin >> n;
	if(n%2==0){
		cout << "Must be an odd number";
	}

		for(int c=0;c<=n;c++){
			cout << "+";}
			for(int c=0;c<=3;c++){
				cout << "-";}


		cout << "+";


	return 0;
}
